# ----------
# <%= @name @network @mask %>
# ----------
subnet <%= @network %> netmask <%= @mask %> {
  pool
  {
<% if @failover != '' -%>
    failover peer "<%= @failover %>";
<% end -%>
<% @range.each do |r| -%>
    range <%= r %>;
<% end -%>
  }

  option subnet-mask <%= @mask %>;
  option routers <%= @gateway %>;
<% [@options].flatten.each do |opt| -%>
  option <%= opt %>;
<% end -%>
<% [@parameters].flatten.each do |param| -%>
  <%= param %>;
<% end -%>
}

