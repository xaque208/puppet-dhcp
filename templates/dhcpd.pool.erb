# ----------
# <%= @name %>
# ----------
subnet <%= @network %> netmask <%= @mask %> {
  pool
  {
<% if @failover != '' -%>
    failover peer "<%= @failover %>";
<% end -%>
<% @range.each do |r| -%>
    range <%= r %>;
<% end -%>
  }

  option subnet-mask <%= @mask %>;
<% if @gateway -%>
  option routers <%= @gateway %>;
<% end %>
<% @options.each do |k,v| -%>
  option <%= k %> <%= v %>;
<% end -%>
<% @parameters.each do |k,v| -%>
  <%= k %> <%= v %>;
<% end -%>
}

